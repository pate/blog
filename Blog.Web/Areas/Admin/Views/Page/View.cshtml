@model PageViewModel

@{
    ViewBag.PageTitle = Model.Title;
}

<div class="page-header">
    <h1>@Model.Title</h1>
</div>

@if (Request.IsAuthenticated)
{
    <div class="navbar">
    <div class="navbar-inner">
        <ul class="nav">
            <li><a href="@Url.Action("Edit", new { id = Model.Id })">Edit Page</a></li>
            <li><a href="@Url.Action("View", new { slug = Model.Slug })">View</a></li>
            <li><a href="#">Link</a></li>
        </ul>
    </div>
</div>
}

<div class="row-fluid">
    @Model.Body
</div>