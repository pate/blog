@model PostInputModel

<div class="row-fluid">
    <div class="span6">
        @Html.TextBoxFor(x => x.Title, new { placeholder = "Title", @class = "textbox-large" })
        @Html.TextBoxFor(x => x.Slug, new {})
        <div class="mdd_toolbar"></div>
        @Html.TextAreaFor(x => x.Body, new { placeholder = "Markdown", @class="mdd_editor"})
        <div class="mdd_resizer"></div>
    </div>
    <div class="span6">
        <h3>Preview</h3>
        <div class="mdd_preview"></div>
    </div>
</div>

<div class="row-fluid">
    @Html.EditorFor(x => x.IsActive)
    @Html.EditorFor(x => x.PublishedOn)
    @Html.EditorFor(x => x.ImageUrl)
</div>