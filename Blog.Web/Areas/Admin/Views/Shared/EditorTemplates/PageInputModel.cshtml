@model PageInputModel

<div class="page-header1">
    <div class="row-fluid">
        @Html.TextBoxFor(x => x.Title, new { placeholder = "Title" })
        @Html.TextBoxFor(x => x.Slug, new {})
    </div>
</div>

<div class="row-fluid">
    <div class="span6">
        @Html.EditorFor(x => x.Body)
    </div>
    <div class="span6">
        <div id="preview"></div>
    </div>
</div>