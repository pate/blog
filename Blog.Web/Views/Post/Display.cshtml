@model PostViewModel

@{
    ViewBag.Title = Model.Title;
}

<div class="page-header">

    @if (Request.IsAuthenticated)
    {
        <div class="subnav pull-right">
            <ul class="nav nav-pills">
                <li><a href="@Url.Action("Delete", "Post", new {id = Model.Id, Area = Constants.Areas.Admin})">Delete Post</a></li>
                <li><a href="@Url.Action("Edit", "Post", new {id = Model.Id, Area = Constants.Areas.Admin})">Edit Post</a></li>
            </ul>
        </div>
    }
    <h1>@Model.Title
        @if (Model.PublishedOn.HasValue)
        {
            <small>Published @Html.DisplayFor(x => Model.PublishedOn)</small>
        }
    </h1>
</div>
<div class="row-fluid">
    <div class="span6">
        @Model.Body
    </div>
</div>